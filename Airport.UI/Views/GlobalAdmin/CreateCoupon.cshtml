                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="$('#addCouponForm').submit()">Create</button>
            </div>
        </div>
    </div>
</div>



@section pageJs{
    <script>
        $('.updateCoupon')


        $('#addCouponForm').on("submit", function (e) {
            e.preventDefault()
            if ($(this).valid()) {
                var formData = $(this).serialize()
                $.ajax({
                    url: '@Url.Action(nameof(Airport.UI.Controllers.GlobalAdminController.CreateCouponJSON))',
                    type: "POST",
                    data: formData,
                    success: function (response) {
                        if (response.result == 1) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: 'Successfully Created Coupon',
                            }).then(() => {
                                location.reload()
                            })
                        }
                    }
                });
            }

        })
    </script>
}