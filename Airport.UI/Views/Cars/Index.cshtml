@{
    Layout = "_PanelLayout";
}
@model IEnumerable<MyCars>

<div class="d-flex justify-content-end mb-3">
    <a href="/panel/add-car" class="btn" style="
    background: #EC681E;
    color: white;">
        Add My Car
    </a>
</div>

@*<button class="btn btn-warning" id="sendsms">SMS Gönder</button>
