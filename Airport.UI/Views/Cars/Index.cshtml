<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <a href="/panel/update-my-car/@item.Id" class="serviceItems" data-value="@item.Id">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <p class="list-item-heading mb-0 pt-1">@item.Brand.CarBrandName @item.Model.CarModelName - @item.Plate</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>


