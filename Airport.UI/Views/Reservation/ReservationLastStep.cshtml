@model Reservations


<section class="mt-5 _Module_Margin">
    <div class="container">
        <h1 class="_Page_Title mb-4">
            Reservation information
        </h1>
        <div class="_Page_Flex">
            <div class="_Page_Left">
                <img src="@Model.LocationCars.Car.Type.CarImageURL" alt="">
            </div>
            <div class="_Page_Right">
                <div class="_Page_Right_Style">
                    <div class="mb-2">
                        <h1><b>Reservation Code : <span>@Model.ReservationCode</span> </b></h1>
                    </div>
                    <h2>
                        @Model.LocationCars.Car.Brand.CarBrandName
                    </h2>
                    <div class="my-4">
                        <p>TRANSFER-INN-PERA VIP TRAVEL</p>
                        <p>Min 1 Max @Model.LocationCars.Car.MaxPassenger Passengers</p>
                        <p>Max @Model.LocationCars.Car.SuitCase Suitcase+ @Model.LocationCars.Car.SmallBags Small Bags</p>
                    </div>
                    <div class="my-2">
                        <h4>Pick Up</h4>
                        <h5>@Model.PickFullName</h5>
                    </div>
                    <div class="my-2">
                        <h4>Drop Off</h4>
                        <h5>@Model.DropFullName</h5>
                    </div>
                    @if (Model.ReturnStatus)
                    {
                        <div class="my-2">
                            <h4>Return Date</h4>
                            <h5>@Model.ReturnDate</h5>
                        </div>
                    }
                    <div class="my-2">
                        <h4>Passengers</h4>
                        <h5>@Model.PeopleCount Adult</h5>
                    </div>

                    <div class="my-2">
                        <h4>Date</h4>
                        <h5>@Model.ReservationDate</h5>
                    </div>

                    @if (Model.IsDiscount)
                    {
                        <h6>Price:<span style="text-decoration: line-through;">@Model.OfferPrice €</span></h6>
                    }

                    <h3>@(Model.IsDiscount ? "Discount Price" : "Price"):@(Model.IsDiscount ? Model.Discount : Model.OfferPrice) €</h3>

                    <a class="_Btn_Style btn" href="http://test.airportglobaltransfer.com/pdf/@(Model.ReservationCode)-@(Model.Id).pdf" target="_blank">Download Voucher</a>
                </div>
            </div>
        </div>
    </div>
</section>




@section  pageJsScript{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"
            integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAnqSEVlrvgHJymL-F8GmxIwNbe8fYUjdg&libraries=places&callback=initMap"></script>
                }

@section pageJs{
    <script>


        function initMap() {
            var directionsService = new google.maps.DirectionsService();
            var directionsRenderer = new google.maps.DirectionsRenderer({
                polylineOptions: {
                    strokeColor: 'red' // Yolun rengini burada belirleyebilirsiniz
                }
            });

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: {@Model.PickLatLng}, // Başlangıç noktası için koordinatlar
        mapTypeControl: false,
            streetViewControl: false,
                zoomControl: false,
                    fullscreenControl: false
                                    });

        directionsRenderer.setMap(map);

        var startPlaceId = "@Model.PickPlaceId";
        var endPlaceId = "@Model.DropPlaceId";

        var request = {
            origin: { placeId: startPlaceId },
            destination: { placeId: endPlaceId },
            travelMode: 'DRIVING' // Yürüyüş, bisiklet, transit veya araç seçeneklerinden birini seçin
        };

        directionsService.route(request, function (result, status) {
            if (status == 'OK') {
                directionsRenderer.setDirections(result);
            }
        });
                                }


        window.onload = () => {
            initMap();
        }
    </script>
                        }