<div class="row">
    <div class="col-md-6">
        <div class="text-right">
            <button class="btn btn-secondary mb-3" type="button" data-toggle="modal" data-target="#addServiceCategoryModal">
                Add Service Category
            </button>
        </div>
        <table id="serviceCategoryTable" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ServiceCategories)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.ServiceCategoryName</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <div class="col-md-6">

        <div class="text-right">
            <button class="btn btn-secondary mb-3" type="button" data-toggle="modal" data-target="#addServicePropertyModal">
                Add Service Property
            </button>
        </div>

        <table id="servicePropertyTable" class="table table-striped">
