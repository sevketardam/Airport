}

@section pageCss{
    <style>
        servicesTable {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .serviceItem {
            width: 100%;
            box-shadow: 0 0 5px rgb(0, 0, 0, 0.2);
            border-radius: 0.5rem;
        }

        .serviceTopContent {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .serviceTopContentLeft {
            padding: 1rem;
            cursor: pointer;
            width: 89%;
        }

            .serviceTopContentLeft p {
                margin: 0;
                padding-left: 0.5rem;
            }

        .serviceBottom {
            display: none;
            margin-top: 0rem;
            transition: margin-top 100ms;
        }

            .serviceBottom.active {
                margin: 0.25rem !important;
            }

            .serviceBottom ul {
                padding: 0 0.5rem 0 1.5rem;
                border-radius: 0 0 0.5rem 0.5rem;
                border-top: 1px solid rgb(0,0,0,.3);
                margin:0;
            }

            .serviceBottom li {
                /* border-top: 1px solid rgb(0, 0, 0, 0.2); */
                padding: 0.5rem;
            }

                .serviceBottom li:not(.serviceBottom li:last-child) {
                    border-bottom: 1px solid rgb(0, 0, 0, 0.2);
                }

        .serviceBtns {
            display: flex;
            gap: 0.5rem;
            justify-content: end;
        }

        .angleBtn {
            cursor: default;
            border: none;
            outline: none;
            color: black !important;
            margin-left: 1rem;
            margin-right: 1rem;
            transform: rotateZ(0deg);
            transition: transform 100ms;
        }

            .angleBtn.active {
                transform: rotateZ(90deg);
            }

        .serviceItem button {
            font-size: 13px;
        }

        .serviceBottom .row {
            align-items: center;
        }

        .serviceBottom p {
            margin: 0;
        }

        .serviceAttrItem {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        @@media (max-width: 1400px) {
            .serviceTopContentLeft {
                width: 89%;
            }
        }

        @@media (max-width: 1200px) {
            .serviceTopContentLeft {
                width: 84.5%;
            }
        }

        @@media (max-width: 992px) {
            .serviceTopContentLeft {
                width: 80%;
            }
        }

        @@media (max-width: 768px) {
            .serviceTopContentLeft {
                width: 72.8%;
            }
        }

        @@media (max-width: 576px) {
            .serviceTopContentLeft {
                width: 70.1%;
            }
        }

        label.error {
            left: 0.3rem;
        }
    </style>
}



