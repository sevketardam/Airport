                    <th scope="col">#</th>
                    <th scope="col">Property Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ServiceProperties)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.ServicePropertyName</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>









